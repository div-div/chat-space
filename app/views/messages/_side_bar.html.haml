.side-bar
  .side-bar__user-name
    .side-bar__top-items
      .side-bar__name
        = current_user.name
      .side-bar__icons
        = link_to new_group_path do
          = icon('fas', 'edit', class:"icons" )
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog',class:"icons")
  .side-bar__group-box
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .side-bar__g-name
            = group.name
          .side-bar__message
            = group.show_last_message


